---
import { getGlobal } from '../utilities/getGlobals'

import type { Footer } from 'app-payload/types'
import { CMSLink } from 'ui-library/component/react/Link/index.tsx'
import { Logo } from 'ui-library/component/react/Logo/index.tsx'

const footerData: Footer = await getGlobal('footer', 1)
const navItems = footerData?.navItems || []
---

<footer class="mt-auto border-t border-border bg-black dark:bg-card text-white">
      <div class="container py-8 gap-8 flex flex-col md:flex-row md:justify-between">
        <a class="flex items-center" href="/">
          <Logo />
        </a>

        <div class="flex flex-col-reverse items-start md:flex-row gap-4 md:items-center">
          <nav class="flex flex-col md:flex-row gap-4">
            {navItems.map(({ link }, i) => {
              return <CMSLink className="text-white" {...link} />
            })}
          </nav>
        </div>
      </div>
    </footer>