{
  "name": "ui-library",
  "version": "0.0.1",
  "description": "Block library for Payload CMS and many frontend frameworks.",
  "main": "index.ts",
  "type": "module",
  "scripts": {
    "generate": "tsx generate-exports.ts"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.7.1",
  "exports": {
    ".": "./src/config.ts",
    "./react/*": "./src/blocks/*/react/index.tsx",
    "./astro/*": "./src/blocks/*/astro/index.astro",
    "./vue/*": "./src/blocks/*/vue/index.vue",
    "./config/*": "./src/blocks/*/config.ts"
  },
  "imports": {
    "#util/*": "./src/utilities/*",
    "#config": "./src/config.ts"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.3",
    "@types/node": "22.13.8",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "app-payload-types": "workspace:app-payload@*",
    "astro": "^5.5.3",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.3",
    "tsx": "^4.19.3",
    "typescript": "5.8.2",
    "vue": "^3.5.13"
  },
  "peerDependencies": {
    "@payloadcms/richtext-lexical": "catalog:payload",
    "clsx": "^2.1.1",
    "payload": "catalog:payload",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "astro": {
      "optional": true
    },
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "tailwindcss": {
      "optional": false
    }
  }
}
