---

import type { Page } from 'mhr-payload'

import { HighImpactHero } from './blocks/HighImpact'
import { LowImpactHero } from './blocks/LowImpact'
import { MediumImpactHero } from './blocks/MediumImpact'


const heros = {
    highImpact: HighImpactHero,
    lowImpact: LowImpactHero,
    mediumImpact: MediumImpactHero
}

const props = Astro.props as Page['hero']
const type = props.type

let HeroToRender = null
if (type && type !== 'none') {
    HeroToRender = heros[type]
}


---

{HeroToRender && <HeroToRender {...props} />}